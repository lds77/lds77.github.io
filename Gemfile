# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll 본체 및 GitHub Pages 환경에 필요한 Gem들을 추가합니다.
# 사용 중인 Jekyll 버전에 따라 "~> 4.0" 부분을 조정할 수 있습니다.
gem "jekyll", "~> 4.0"
gem "github-pages", group: :jekyll_plugins

# _config.yml에 명시된 플러그인들을 Gemfile에 직접 추가하여 설치되도록 합니다.
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "jekyll-feed"

# 만약 이 Gemfile이 Jekyll 테마나 플러그인 개발 목적이 아니라면 아래 gemspec 줄은 제거하거나 주석 처리하세요.
# gemspec
